<h1>Login Page</h1>

<% if flash[:error] %>
  <%= flash[:error] %>
<% end %>

<%= form_tag sessions_path do %>
  <%= label_tag :email %>
  <%= email_field_tag :email %><br>
  <%= label_tag :password %>
  <%= password_field_tag :password %><br>
  <%= submit_tag "Log in" %>
<% end %>

<h2>Not Registered yet?</h2>
<%= button_to "Register", new_user_path, method: :get %>
