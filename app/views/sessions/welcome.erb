<div class="welcome_body">
  <div class="container-fluid text-center">
  <% if flash[:logout] %>
  <h4><%= flash[:logout] %></h4>
  <% end %>
</div>

<% if logged_in? == false %>
<div class="container button_style1">
    <%= button_to "LOGIN", login_path, method: :get, class: "btn btn-success btn-lg" %>
  </div>
  <div class="container button_style2">
    <%= button_to "SIGN UP", new_user_path, method: :get, class: "btn btn-info btn-lg" %>
  </div>
  <% else %>
    <div class="container-fluid text-center">
      <h4><%= @user.full_name %> is currently logged in.</h4>
    </div>
  <% end %>

  <%= render partial: 'shared/background' %>

</div>
