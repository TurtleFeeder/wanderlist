<div class="container-fluid bg-3 text-center">
  <h1>Wanderlist Users - <%= @users.count %> Total</h1><br>

    <%= form_tag("/search", method: "get") do %>
      <%= label_tag(:user_name, "Search by User's Name:") %>
      <%= text_field_tag(:user_name) %>
      <%= submit_tag("Search",class: "btn btn-info") %>
    <% end %><br>
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-sm-3"><p><%= link_to user.full_name, user_path(user) %></p></div>
    <% end %>


  </div>
</div>
